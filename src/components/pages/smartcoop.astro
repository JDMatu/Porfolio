---
import SectionContainer from "../../components/SectionContainer.astro"
import DetailsProject from "../../components/DetailsProject.astro"
import IconSmartCoop from "../../components/Icons/IconSmartCoop.astro"

import { getI18N } from "../../i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

---
<SectionContainer id="smartcoop"  class="my-3 md:mt-0 text-secondary">
        
    <div class="">
        <h1 class="text-center text-2xl py-6 md:text-6xl font-bold italic text-primary-700">SmartCoop</h1>
        <img src="/img/smartcoop/smartcoop.webp" alt="SmartCoop" class="h-60 md:h-96 mx-auto w-fit border-2 rounded-md border-teal-100" transition:name="SmartCoop" />
    </div>
    <DetailsProject 
        title="SmartCoop" 
        date="2021" 
        begint={i18n.Projects.smartcoop.text1_title}
        begin={i18n.Projects.smartcoop.text1}
        imageAdmin={[
            "/img/smartcoop/adm/panel_admin.webp",
            "/img/smartcoop/adm/edit_pag.webp",
            "/img/smartcoop/adm/calendar.webp",
            "/img/smartcoop/adm/add_votes.webp",
            "/img/smartcoop/adm/edit_modal.webp",
            
        ]}
        imageAsociado={[
            "/img/smartcoop/aso/home.webp",
            "/img/smartcoop/aso/votaciones.webp",
            "/img/smartcoop/aso/actividades.webp",
            "/img/smartcoop/aso/ahorro.webp",
            "/img/smartcoop/aso/ventas.webp",
        ]}
        descriptiont={i18n.Projects.smartcoop.text2_title}
        description={i18n.Projects.smartcoop.text2}
        adminData={i18n.Projects.smartcoop.text5}
        asociadoData={i18n.Projects.smartcoop.text6}
        />
        
        <div class="w-full md:w-5/6 md:mt-20">
            <h1 class="text-primary">{i18n.Projects.smartcoop.text4_title}</h1>
            <p>{i18n.Projects.smartcoop.text4}</p>
        </div>
    </SectionContainer>

