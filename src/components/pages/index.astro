---
import Hero from "../Hero.astro";
import Info from "../Info.astro";
import Stack from "../Stack.astro";
import Projects from "../Projects.astro";
import AboutMe from "../AboutMe.astro";
import SectionContainer from "../SectionContainer.astro";
import Experience from "../Experience.astro";
import Briefcase from "../Icons/Briefcase.astro";
import CodeIcon from "../Icons/Code.astro";
import Icon from "../Icons/Icon.astro";
import IconStack from "../Icons/IconStack.astro";
import ProfileCheck from "../Icons/ProfileCheck.astro";

import { getI18N } from "../../i18n";
import GitHub from "../Icons/GitHub.astro";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

---

<SectionContainer id="home"  class="my-20  md:my-28">
    <Hero>
    </slot>
    </Hero>
    </SectionContainer>

    <Info />

    <SectionContainer id="experience" class="mt-8 ">
    <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-secondary-100"
    >
        <Briefcase class="size-8" />
        { i18n.Experience.title }
    </h2>
    <Experience />
    <div class="text-center py-8" >
        <!-- Cursos tomados -->
        <h2 class=" text-secondary-100 text-2xl">{ i18n.Experience.Course } </h2>
        
        <div class="flex flex-wrap gap-5 mb-4 justify-center pt-3">
        
            <Icon src="/DB_curso4.png" alt="Curso DB Relacionales" link="/files/DB_certificado.pdf" />
            <Icon src="/Git_curso.png" alt="GitHub Universe Cloud Skills Challenge" link="" />
            <Icon src="/Python_curso.png" alt="Curso Python Essentials I" link="" />
            
        </div>
        <a href="https://www.linkedin.com/in/matudev/" class="text-gray hover:underline hover:text-primary-700">
            { i18n.Experience.more }
        </a>
    </div>
    </SectionContainer>

    <SectionContainer id="projects" class="mt-6">
    <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-secondary-100"
    >
        <CodeIcon class="size-8" />
        { i18n.Projects.title }
    </h2>
    <Projects />
    </SectionContainer>

    <SectionContainer id="stack" class="mt-16">
    <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-secondary-100"
    >
        <IconStack class="size-8" />
        { i18n.Frameworks.title }
    </h2>
    <Stack />
    </SectionContainer>

    <SectionContainer id="about" class="mt-16">
    <h2
        class="flex items-center text-3xl font-semibold gap-x-8 text-secondary-100 mb-3"
    >
        <ProfileCheck class="size-8" />
        { i18n.About.title }
    </h2>
    <AboutMe />
</SectionContainer>