---
import LinkButton from "./Icons/LinkButton.astro"
import Tailwind from "./Icons/Tailwind.astro"
import GitHub from "./Icons/GitHub.astro"
import Link from "./Icons/Link.astro"

const { title, description, image, tags, github, link, ClassName} = Astro.props



---



<article class={ClassName}>
    <div class="w-full md:w-1/2">
        <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-secondary lg:hover:border-primary lg:hover:bg-primary">
<!--         <img alt="" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
 -->        <img src={image} alt="Logo" class="w-full h-full" />
        </div>
    </div>

    <div class="w-full md:w-1/2 md:max-w-lg">
        <h3 class="text-2xl font-bold text-secondary-100 ">
        {title}
        </h3>
        <div class="flex flex-wrap mt-2">
        <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
                <li>
                <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                    <tag.icon class="size-4" />
                    {tag.name}
                </span>
                </li>
            ))}
            </ul>

        <div class="mt-2 text-secondary ">{description}</div>
        <footer class="flex items-end justify-start mt-4 gap-x-4">
            {github && (
                <LinkButton href={github}>
                <GitHub class="size-6" />
                Code
                
                </LinkButton>
            )}
            {link && (
                <LinkButton href={link}>
                <Link class="size-4" />
                Preview
                </LinkButton>
            )}
            </footer>
        </div>
    </div>
</article>