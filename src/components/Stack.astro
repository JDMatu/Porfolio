---

import { getI18N } from "../i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

---

<div class="text-primary">
    <div class="flex flex-col md:flex-row gap-4 justify-around py-3">
        
        <div class="bg-fondo w-full rounded-lg border-2 border-primary">
            <h2 class="text-lg mx-3 mb-2 ">{i18n.Frameworks[1]}</h2>
            <div class="flex flex-wrap justify-center">
                <span class="text-lg mx-2 text-secondary-100 hover:transition ease-in-out delay-75">Python</span>
                <span class="text-lg mx-2 text-secondary-100 hover:transition ease-in-out delay-75">JavaScript</span>
                <span class="text-lg mx-2 text-secondary-100 hover:transition ease-in-out delay-75">HTML</span>
                <span class="text-lg mx-2 text-secondary-100 hover:transition ease-in-out delay-75">CSS</span>
            </div>
        </div>

        <div class="bg-fondo w-full rounded-lg border-2 border-primary">
            <h2 class="text-lg mx-3 mb-2">{i18n.Frameworks[2]}</h2>
            <div class="flex flex-wrap justify-center">
                <span class="text-lg mx-2 text-secondary-100 hover:transition ease-in-out delay-75">Flask</span>
                <span class="text-lg mx-2 text-secondary-100 hover:transition ease-in-out delay-75">Pandas</span>
                <span class="text-lg mx-2 text-secondary-100 hover:transition ease-in-out delay-75">Tailwind CSS</span>
                <span class="text-lg mx-2 text-secondary-100 hover:transition ease-in-out delay-75">Astro</span>
                <span class="text-lg mx-2 text-secondary-100 hover:transition ease-in-out delay-75">React</span>
            </div> 
        </div>
        
        <div class="bg-fondo w-full rounded-lg border-2 border-primary">
            <h2 class="text-lg mx-3 mb-2">{i18n.Frameworks[3]}</h2>
            <div class="flex flex-wrap justify-center">
                <span class="text-lg mx-2 text-secondary-100 hover:transition ease-in-out delay-75">MySQL</span>
                <span class="text-lg mx-2 text-secondary-100 hover:transition ease-in-out delay-75">PostgreSQL</span>
                <span class="text-lg mx-2 text-secondary-100 hover:transition ease-in-out delay-75">Git | GitHub</span>
                <span class="text-lg mx-2 text-secondary-100 hover:transition ease-in-out delay-75">Vercel</span>
                <span class="text-lg mx-2 text-secondary-100 hover:transition ease-in-out delay-75">Netlify</span>
                <span class="text-lg mx-2 text-secondary-100 hover:transition ease-in-out delay-75">PythonAnywhere</span>

            </div>
    

        </div>

    </div>
</div>