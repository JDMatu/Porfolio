---

import { getI18N } from "../i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

import ExperienceItem from "./ExperienceItem.astro"
const EXPERIENCIE = [
  {
    date: i18n.Experience[1].date,
    title:  i18n.Experience[1].title,
    company:  i18n.Experience[1].company,
    description:
      i18n.Experience[1].description,
    link: i18n.Experience[1].link,
  },
  {
    date: i18n.Experience[2].date,
    title: i18n.Experience[2].title,
    company: i18n.Experience[2].company,
    description:
      i18n.Experience[2].description,
  },
]
---

<ol class="relative mt-16">
  {
    EXPERIENCIE.map((experiencie) => (
      <li class="">
        <ExperienceItem {...experiencie} />
      </li>
    ))
  }
</ol>
