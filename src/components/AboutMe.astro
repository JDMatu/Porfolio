---

import { getI18N } from "../i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

---

<article class="flex flex-col items-center justify-center gap-8 text-secondary md:flex-row">
  <div
    class="[&>p]:mb-4 [&>p>strong]:text-primary [&>p>strong]:font-normal [&>p>strong]:font-mono text-pretty "
  >
    <p>
      {i18n.About.parragraph1[1]}<strong class="italic"> {i18n.About.parragraph1[2]} </strong>{i18n.About.parragraph1[3]}
    </p>

    <p>
      <strong>{i18n.About.parragraph2[1]}</strong>
      {i18n.About.parragraph2[2]} 
      <strong> {i18n.About.parragraph2[3]} </strong> 
      {i18n.About.parragraph2[4]}
      <strong>{i18n.About.parragraph2[5]}</strong>.
